<style>
    .background {
        background: #0d1011 url(<%= imageUrl %>) no-repeat center fixed;
        background-size: cover;
        position: fixed;
        left: 0;
        top: 0;
        height: 100vh;
        width: 100vw;
        z-index: -1000000;
    }
</style>
<script>
    function init() {
        document.getElementsByTagName("body")[0].classList.add("invisible")
        document.getElementsByTagName("body")[0].onload = loaded;
    } init();

    function loaded() {
        document.getElementsByTagName("body")[0].classList.add("visible")
        document.getElementsByTagName("body")[0].classList.remove("invisible")
    }    
</script>
<div class="background"></div>