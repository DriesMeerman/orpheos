<% if (typeof(options) != 'undefined') { 
   let modalId = options.id;
   let body = options.body;
   let title = options.title;
   let saveOnclick = options.saveOnclick || "";
   if (typeof(options.formId) != 'undefined' && !saveOnclick) {
        saveOnclick = `onClick="document.getElementById('${options.formId}').submit();"`;
   }
%>

<div class="modal fade" id="<%= modalId %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <%= title %>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%- body %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" <%- saveOnclick %>>
                    Save
                </button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<% } %>