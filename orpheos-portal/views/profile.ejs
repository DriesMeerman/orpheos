<html>

<head>
    <title>Orhpeos Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <% include ../templates/headTemplate.ejs %>
</head>

<body>
    <% include ../templates/navbar.ejs %>
    <%- include('../templates/backgroundPartial.ejs', {imageUrl: "/assets/coding_background.jpg"}) %>
    <div class="container admin">
        <div class="row justify-content-md-center">
            <div class="col-8">
                <div class="card" style="max-height: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">User Profile</h5>
                        <div>
                            <p>
                                ID:
                                <%= user.id %><br />
                                Username:
                                <%= user.username %><br />
                                Name:
                                <%= user.displayName %><br />
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-md-center" style="margin-top: 3rem;">
                <div class="col-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Update User</h5>
                            <div>
                                <form action="/profile" method="POST">
                                    <div class="form-group">
                                        <label for="name">Display Name</label>
                                        <input id="name" type="text" name="display_name" class="form-control" placeholder="new display name">
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input id="password" type="password" name="password" class="form-control" placeholder="new password">
                                    </div>
    
                                    <button type="submit" class="btn btn-outline-info">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

</html>